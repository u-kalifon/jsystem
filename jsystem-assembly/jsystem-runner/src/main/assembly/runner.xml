<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<formats>
		<format>tar.gz</format>
		<format>zip</format>
		<format>dir</format>
	</formats>
	<id>runner</id>
	<dependencySets>
		<dependencySet>
			<outputDirectory>thirdparty</outputDirectory>
			<unpack>true</unpack>
			<directoryMode>774</directoryMode>
			<fileMode>774</fileMode>
			<includes>
				<include>ant:ant-full:*</include>
			</includes>
			<unpackOptions>
				<excludes>
					<exclude>ant/docs/**</exclude>
				</excludes>
			</unpackOptions>
		</dependencySet>
		<dependencySet>
			<outputDirectory>projects/jsystemServices/target/classes</outputDirectory>
			<unpack>true</unpack>
			<includes>
				<include>*:jsystem-services-tests:*</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>projects/jsystemServices/src/main/java</outputDirectory>
			<unpack>true</unpack>
			<includes>
				<include>*:jsystem-services-tests:*:sources:*</include>
			</includes>
			<unpackOptions>
				<includes>
					<include>**/*.java</include>
				</includes>
			</unpackOptions>
		</dependencySet>
		<dependencySet>
			<outputDirectory>projects/jsystemServices/src/main/resources</outputDirectory>
			<unpack>true</unpack>
			<includes>
				<include>*:jsystem-services-tests:*:sources:*</include>
			</includes>
			<unpackOptions>
				<includes>
					<include>**/*.xml</include>
					<include>**/*.properties</include>
				</includes>
			</unpackOptions>
		</dependencySet>
		<dependencySet>
			<outputDirectory>projects/jsystemServices/lib</outputDirectory>
			<unpack>false</unpack>
			<includes>
				<include>*:jsystem-services-so:*</include>
			</includes>
		</dependencySet>


		<dependencySet>
			<outputDirectory>thirdparty/ant/lib</outputDirectory>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
			<includes>
				<include>*:ant-contrib:*</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>thirdparty/commonLib</outputDirectory>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
			<includes>
				<include>*:ant:*</include>
				<include>*:ant-launcher:*</include>
				<include>*:asm:*</include>
				<include>*:asm-commons:*</include>
				<include>*:asm-tree:*</include>
				<include>*:avalon-framework:*</include>
				<include>*:commons-codec:*</include>
				<include>*:commons-httpclient:*</include>
				<include>*:commons-jxpath:*</include>
				<include>*:hamcrest-core:*</include>
				<include>*:jcommon:*</include>
				<include>*:jfreechart:*</include>
				<include>*:junit:*</include>
				<include>*:jython:*</include>
				<!-- include>*:log4j:*</include -->
				<include>*:slf4j-api:*</include>
				<include>*:logback-classic:*</include>
				<include>*:logback-core:*</include>
				<include>*:jul-to-slf4j:*</include>
				<include>*:logkit:*</include>
				<include>*:mail:*</include>
				<include>*:javaparser-core:*</include>
				<include>*:serializer:*</include>
				<include>*:servlet-api:*</include>
				<include>*:spring:*</include>
				<include>*:xalan:*</include>
				<include>*:xml-apis:*</include>
				<include>*:activation:*</include>
				<include>*:cli:*</include>
				<include>*:FileTransfer:*</include>
				<include>*:embeddedCatalina:*</include>
				<include>*:commons-logging:*</include>
				<include>*:commons-logging-api:*</include>
				<include>*:commons-io:*</include>
				<include>*:commons-compress:*</include>
				<include>*:looks:*</include>
				<include>*:tftp4java-server:*</include>
				<include>*:tftp4java-client:*</include>
				<include>*:commons-net:*</include>
				<include>*:ganymed-ssh2:*</include>
				<include>*:comm:*</include>
				<include>*:ftpserver-core:*</include>
				<include>*:catalina:*</include>
				<include>*:jwizz:*</include>
				<include>*:swingx:*</include>
				<include>*:junit:*</include>
				<include>*:swing-worker:*</include>
				<include>*:mx4j-jmx:*</include>
				<include>*:commons-digester:*</include>
				<include>*:commons-modeler:*</include>
				<include>*:filters:*</include>
				<include>*:xz:*</include>
				<include>*:jackson-databind:*</include>
				<include>*:jackson-annotations:*</include>
				<include>*:jackson-core:*</include>
				<include>*:jackson-dataformat-xml:*</include>
				<include>*:stax2-api:*</include>
				<include>*:difido-reports-common:*</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
			<includes>
				<include>org.jsystemtest:*:jar</include>
				<include>org.jsystemtest.systemobjects:*:jar</include>
			</includes>
			<excludes>
				<exclude>*:jsystem-services-so:*</exclude>
				<exclude>*:jsystem-services-tests:*</exclude>
				<exclude>*:jsystem-runner:*</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<outputDirectory>dev</outputDirectory>
			<directory>src/main/dev</directory>
		</fileSet>
		<fileSet>
			<outputDirectory></outputDirectory>
			<directory>src/main/etc</directory>
			<excludes>
				<exclude>run</exclude>
				<exclude>runBase</exclude>
				<exclude>runAgent</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<outputDirectory></outputDirectory>
			<directory>src/main/etc</directory>
			<fileMode>775</fileMode>
			<includes>
				<include>run</include>
				<include>runBase</include>
				<include>runAgent</include>
			</includes>
		</fileSet>

	</fileSets>

</assembly>
